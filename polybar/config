[module/xwindow]
type = internal/xwindow
label = %title:0:90:...%
format-foreground = #87CEFA

[module/uptime]
type = custom/script
exec = uptime -p | sed -e 's/up //' -e 's/\ years\?,/y/' -e 's/\ weeks\?,/w/' -e 's/\ days\?,/d/' -e 's/\ hours\?,\?/h/' -e 's/\ minutes\?/m/'
format-prefix = "ğŸ–¥ï¸ "
